@model IEnumerable<ITIProject.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
          
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-info btn-sm mx-1">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-warning btn-sm mx-1">Edit</a>
                    <a asp-action="Remove" asp-route-id="@item.CourseId" class="btn btn-danger btn-sm mx-1">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
